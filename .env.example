# =============================================================================
# PACFLOW ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and replace placeholder values with your actual keys.
# NEVER commit your .env file to version control!

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Your Supabase project URL (found in Project Settings > API)
SUPABASE_URL=PASTE_YOUR_SUPABASE_URL_HERE

# Supabase anon/public key (safe for client-side, found in Project Settings > API)
SUPABASE_ANON_KEY=PASTE_YOUR_SUPABASE_ANON_KEY_HERE

# Supabase service role key (SERVER-SIDE ONLY - never expose to client!)
# Found in Project Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=PASTE_YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# =============================================================================
# SMS WORKS CONFIGURATION
# =============================================================================

# SMS Works JWT token for authentication
# Get this from your SMS Works dashboard
SMSWORKS_JWT=PASTE_YOUR_SMSWORKS_JWT_HERE

# SMS sender name (up to 11 characters, alphanumeric)
SMSWORKS_SENDER=PackFlow

# =============================================================================
# STRIPE CONNECT CONFIGURATION
# =============================================================================

# Stripe Secret Key (starts with sk_test_ for test mode or sk_live_ for production)
# Found in Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=PASTE_YOUR_STRIPE_SECRET_KEY_HERE

# Base URL for your application (used for return/redirect URLs)
# Use http://localhost:3002 for local development
APP_BASE_URL=http://localhost:3002

# Webhook secret for V2 thin events (connected account updates)
# Created when you set up the webhook endpoint in Stripe Dashboard
# Or use Stripe CLI: stripe listen --forward-to localhost:3002/api/stripe/webhooks/v2-thin
STRIPE_WEBHOOK_SECRET_V2_THIN=PASTE_YOUR_WEBHOOK_SECRET_V2_THIN_HERE

# Webhook secret for subscription/billing events
# Created when you set up the webhook endpoint in Stripe Dashboard
# Or use Stripe CLI: stripe listen --forward-to localhost:3002/api/stripe/webhooks/subscriptions
STRIPE_WEBHOOK_SECRET_SUBSCRIPTIONS=PASTE_YOUR_WEBHOOK_SECRET_SUBSCRIPTIONS_HERE

# Platform fee in basis points (100 = 1%, 500 = 5%)
# This is the fee taken from each transaction on connected accounts
PLATFORM_FEE_BPS=500

# Price ID for platform subscription product
# Create a subscription product in Stripe Dashboard and use its price ID (starts with price_)
# Leave as placeholder to disable subscription feature
PLATFORM_SUBSCRIPTION_PRICE_ID=PASTE_YOUR_SUBSCRIPTION_PRICE_ID_HERE

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the Express server (default: 3002)
PORT=3002

# Node environment (development or production)
NODE_ENV=development

# Production URL (optional - for CORS in production)
# PRODUCTION_URL=https://your-production-domain.com
